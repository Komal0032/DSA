//1. find Largest Element in array 
class Komal {
    public int largestElement(int[] nums) {
                // assume first element is max
        int max = nums[0];
        
        // traverse the array
        for (int i = 1; i < nums.length; i++) {
            if (nums[i] > max) {
                max = nums[i];
            }
        }  
        return max;
    }
}


